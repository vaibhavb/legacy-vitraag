\begin{verbatim}
interface Adder
  input  q0, q1: bool; di: [0..7]; 
  output do: [0..7]; 

  input atom
    init
      [] true -> q0:=1
      [] true -> q1:=1
    update
      [] true -> q0':=1
      [] true -> q1':=1
  endatom
  output atom 
    init 
      [] true -> do:=nondet
    update
      []  q0 &  q1 -> do':=di'
      [] ~q0 &  q1 -> do':=di'+1
      []  q0 & ~q1 -> do':=di'-1
  endatom
end interface
\end{verbatim}
\end{minipage}
