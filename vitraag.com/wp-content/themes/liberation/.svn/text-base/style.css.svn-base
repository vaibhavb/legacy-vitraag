/*
Theme Name: The liberation
Theme URI: http://www.vitraag.com/
Description: Overtime this theme was evolved to support fluid layout and responsiveness.
Version: 0.8
Author: Vaibhav Bhandari
Tags: red, variable width, two columns, widgets

Liberation theme by Vaibhav Bhandari || http://www.vitraag.com
This is just a basic two-cloumn them using Adapt.js and inspiration from Copyblogger.
*/

@import url("../liberation/css/reset.css");
@import url("http://thekarkhana.vitraag.com/wp-content/themes/liberation/css/text.css");

/* `Basic HTML
----------------------------------------------------------------------------------------------------*/

* { padding: 0; margin: 0; }

/*
color-names 
{
    blue: 3690c0;
    red: a90000;
    white: fff;
    black: 000;
    gray: ccc;
    purple: ccc;
    blue: aaa;
}
*/

body {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 62.5%;
  color: #222;
}

h1 {
   font-family: 'Spinnaker', sans-serif;    
}

h2,
h3,
h4,
h5,
h6 {
  line-height: 1;
}

a {color: #a90000;}
    a:visited { color:#a90000; }
    a:hover {color: #a90000;}
    a img { border: none; }
	
blockquote { margin: 0 0 1.5385em 1.5em; padding: 0 0 0 0.7692em; 
             font-family: Georgia, "Times New Roman", Times, serif; 
             color: #555; border-left: 0.2308em solid #a90000; }

abbr, acronym { font-size: 0.8462em; line-height: 1.0em; border-bottom: 1px dotted #ccc; text-transform: uppercase; letter-spacing: 1px; cursor: help; }

code { color: #090; font-family: Courier, "Courier New", monospace; line-height: 1.0em; }

pre { margin: 0 0 1.5385em 0; padding: 0.7692em; font-size: 1.0em; overflow: auto; background: #ccc; }

p.unstyled { font-size: 1.3em; }

p.center { text-align: center; }


/* 'Headlines
----------------------------------------------------------------------------------------------------*/

h1, h2 { 
   	font-family: 'Spinnaker', sans-serif;    
	font-size: 2.4em; letter-spacing: -1px; color: #a90000; }

	h2 a, h2 a:visited { color: #a90000; }
	
	h2 a:hover { color: #000; }
	
	.entry h1 { margin: 0 0 0.0071em 0; border-bottom: solid 1px #ccc; }
	
	.page h1 { margin: 0 0 0.6071em 0; border-bottom: solid 1px  #ccc; }
	
	.archive h1 { font-size: 2.4em; line-height: 1.66667em; margin: 0 0 1.66667em 0;}
	
	#sidebar h2 { font-size: 1.5em; line-height: 1.5556em; margin: 0 0 0.5em 0; 
	              border-bottom: solid 1px #3690c0; color: #000; }
	
h3 { font-size: 1.3846em; line-height: 1.1111em; color: #000; }

	.entry h3 { margin: 1.6667em 0 0.5556em 0; }
	
	#comments h3 { font-size: 1.8em; }
	
	#comments h3.comment_intro { margin: 0 0 1.11111em 0; padding: 2.05556em 0 0 0; 
	                             border-top: solid 1px #3690c0; }

	#comments h3#respond { margin: 2.2222em 0 0 0; }
	
h4 { font-size: 1.1538em; line-height: 1.3333em; color: #000; }


/* `Core layout elements 
----------------------------------------------------------------------------------------------------*/
.header-container
{ 
  background-image:url(images/Header-Image.png);
  padding-top: 2em;
  padding-bottom: 4em;
  background-repeat:repeat-x;  
}

#header h1 a {font-size: 1.5em; color:#fff; text-decoration:none;} 
#header h1 {margin-bottom:0px;}
#header #tagline {color:#ccc; 
	font-family: Courier, "Courier New", serif; 
	margin-bottom:2em;
	font-size:1.5em}

#nav {
    
}
    #nav ul { list-style:none;}
    #nav ul li {float:right; font-size:1.6em; color:#fff; text-decoration:none; 
		margin-left:2.0em; margin-top:3em;}
    #nav ul li a {text-decoration:none;}
    #nav ul li a:visited {}
    #nav ul li a:hover{color:#ccc}
    #nav ul li a.current{color:#ccc; 
		text-decoration: underline;
		font-style:normal;}
    #nav ul li a.current:hover{text-decoration:none;}

#rss { 
        background-image: url(images/rss.png);
	background-position: right;
	padding-top: 6em;
	padding-bottom: 1em;
	margin-right: 9em;
	margin-bottom: -5em;
	margin-top:9em;
	background-repeat: no-repeat; 
}

#footer-container {
  padding-top: 1em;
  background-image:url(images/Footer-Image.png);
  background-repeat:repeat-x;
}
	
	#footer-container .credits {
		    font-size:1.2em;
		    text-align:left;
		}
		
		#footer-container p {
		   color:#ccc;
		}

		#footer-container #back-top {
		    text-align: right;
		    font-size:1.2em;
		}
		
    #footer-container .debug 
    {
	text-align:left;
        font-size:1em;
    }
	
/* `Content styles
----------------------------------------------------------------------------------------------------*/
.post_date { font-size: 1.1em; line-height: 1.3em;
	     text-align:right; 
             margin: 0 0 1.8182em 0; color: #aaa; border-bottom: solid 1px #3690c0; }

	.post_date a, .post_date a:visited { color: #000; padding: 0.0909em; }
	
	.post_date a:hover { color: #000; background: #ccc; }

.entry { font-size: 1.3em; line-height: 1.5385em; }
	
	.entry a, .entry a:visited { padding: 1px 0; border-bottom: 1px solid #bbb; }
	
	.entry a:hover { padding: 1px 0; color: #fff; background: #a90000; border-bottom: none; }
	
	.entry p { margin: 0 0 1.5385em 0; }

	.entry ul, .entry ol { margin: 0 0 1.5385em 3.0em; }
	
	.entry ul { list-style-type: disc; }
	
		.entry li { }
		
			.entry ul li ul, .entry ul li ol, .entry ol li ul, 
			.entry ol li ol { margin: 0 0 0 1.5em; }
	
	.entry dl { margin: 0 0 1.5385em 0; }
			
		.entry dt { font-weight: bold; }
		
		.entry dd { margin: 0 0 0 1.5em; }
		
	.entry sup, .entry sub { line-height: 1.0em; }
		
	.entry blockquote.right, .entry blockquote.left  
	{
	    width: 13.6875em; padding: 0.4375em 0;
	    font-size: 1.2308em; line-height: 1.25em; border: 0.0625em solid #ccc; 
	    border-width: 0.0625em 0; text-align: center; }
	
	.entry blockquote.right { margin: 0 0 0 0.9375em; float: right; clear: right; }
	
	.entry blockquote.left { margin: 0 0.9375em 0 0; float: left; clear: left; }

		.entry blockquote.right p, .entry blockquote.left p { margin: 0 !important; }
		
	.entry .ad { margin: 0 0 0 1.1538em; float: right; clear: right; }
	
		.entry .ad_left { margin: 0 1.1538em 0 0; float: left; clear: left; }

	.entry img { }

	.entry img.left { margin: 0 1.1538em 0 0; float: left; clear: left; }
	
	.entry img.right { margin: 0 0 0 1.1538em; float: right; clear: right; }
	
	.entry img.center { display: block; margin: 0 auto 1.5385em auto; clear: both; }

	.entry img.frame { border: 0.3846em solid #ddd; }
	
	.entry img.stack { clear: none !important; }
	
	.entry table {border:1px solid #ccc;}
	
	.entry table td {border:1px solid #ccc;}

.post_meta { margin: 0 0 4.5385em 0; padding: 0.3846em 0 0 0; 
             border-top: solid 1px #3690c0; font-size: 1.3em; 
	     text-align:right;
             line-height: 1.0em; clear: both; }
	
	.add_comment { padding: 0 0 0 1.6154em; 
	               float:right;
		       background: url('images/icon_comment.gif') 0 50% no-repeat; 
	               font-weight: bold; }

	.post_meta a:hover { color: #000; border-bottom: 1px solid #a90000; }

.page .entry { margin: 0 0 3.0769em 0; border-bottom: 1px solid #ccc; }

.navigation { width: 39em; margin: 0 0 0 0; font-size: 1.2em; line-height: 1.6667em; }
	
	.navigation a:hover { color: #000; border-bottom: 1px solid #a90000; }
	
	,navigation p {display:inline;}
	
	.next { text-align: right;}

/* 'Sidebar styles
----------------------------------------------------------------------------------------------------*/
ul.sidebar_list { list-style: none; }

	ul.sidebar_list li.widget, ul.sidebar_list li.linkcat  
	{
	   width: 16.6667em; margin: 0 0 0.5em 0; font-size: 1.2em; line-height: 1.6667em; float:right;
	}

		li.widget p { margin: 0 0 1.66667em 0; }
		
		li.widget ul, li.linkcat ul { list-style: none; margin: 0 0 0.8333em 0; }
		
			li.widget li, li.linkcat li  
			{
			    padding: 0 0 0 1.16667em; background: url('images/bullet.gif') 0 0.4167em no-repeat; 
			}
					
				li.widget li a:hover, li.linkcat li a:hover { color: #000; border-bottom: 1px solid #a90000; }
				
				


/* 'Searchform styles
----------------------------------------------------------------------------------------------------*/
#search_form #searchsubmit {
		width: 17px; height: 17px; float: right; 
		background: url(images/search-icon.png); 
		text-indent: -ccc9px;
}
	
#search_form { margin: 0 0 0.5833em 0; }

html[xmlns*=""] body:last-child #search_form { margin: 0 0 0.75em 0; } /* This is a hack for Safari */

	#search_form .search_input { width: 15.91667em; padding: 0.25em; color: #a2a2a2;
	                             font-style:italic; 
	                             font: normal 1.0em Verdana, Arial, Helvetica, sans-serif; 
	                             border: 0.083333em solid #ccc; border-right-color: #eee; 
	                             border-bottom-color: #eee; }
	
	#search_form .search_input:focus { border-top-color: #666; 
	                                   border-left-color: #666; 
	                                   border-right-color: #ddd; border-bottom-color: #ddd; }
	
	#content .search_input { font-size: 0.9231em !important; }
		

/* 'Comments styles
----------------------------------------------------------------------------------------------------*/

#comment_form { width: 46.8em; margin: 0 0 4.0em 0; }

	#comment_form a:hover { text-decoration: underline; }

	#comment_form p { padding: 0.7692em 0; }
	
		#comment_form label { padding: 0 0 0 0.83333em; font-size: 1.2em; }

		#comment_form .text_input { width: 15.3846em; padding: 0.23077em; 
		                            color: #a90000; font: bold 1.3em;
		                            border-top: 0.15385em solid #ccc; 
		                            border-left: 0.15385em solid #ccc; 
		                            border-right: 0.07692em solid #eee; 
		                            border-bottom: 0.07692em solid #eee; }
		
		#comment_form .text_input:focus { border-top-color: #666; 
		                                  border-left-color: #666; 
		                                  border-right-color: #ddd; 
		                                  border-bottom-color: #ddd; }
		
		#comment_form .text_area { width: 32.9231em; }

		#comment_form p.subscribe-to-comments { font-size: 1.3em; }
		
			#comment_form p.subscribe-to-comments label { font-size: 1.0em; }

		#comment_form .form_submit { padding: 0.5em; 
		                             background: url('images/submit_bg.gif') repeat-x; 
		                             color: #000; border: 0.21429em double #ccc; 
		                             border-top-color: #ccc; border-left-color: #ccc; 
		                             font: bold 1.4em/1.0em ;
		                             cursor: pointer; }
		
		#comment_form .form_submit:hover { color: #a90000; }
		

/*---:[ self-clearing floats courtesy of Dan Cederholm at simplebits.com ]:---*/

#header:after, #logo:after, #nav:after, #content_box:after, .page .entry:after, #comments:after, 
dl#comment_list dd:after, #comment_form:after  {
    display: block; height: 0; content: "."; visibility: hidden; clear: both; 
}
